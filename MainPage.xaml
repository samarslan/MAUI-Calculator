<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="{OnPlatform iOS='0,20,0,0'}"
             Shell.NavBarIsVisible="False"
             x:Class="MAUI_Calculator.MainPage">

    <Grid
        Padding="5,0"
        ColumnSpacing="1"
        BackgroundColor="{AppThemeBinding Light=#f7f7f7, Dark=#1d1d1d}"
        RowSpacing="1">


        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Label
            x:Name="result"
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Padding="30"
            BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#2d2d2d}"
            FontAttributes="Bold"
            FontSize="48"
            HorizontalTextAlignment="End"
            LineBreakMode="NoWrap"
            Text="0"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            VerticalTextAlignment="Center" />

        <Button
            Grid.Row="1"
            Grid.ColumnSpan="2"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnClear"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="C" />


        <Button
            Grid.Row="1"
            Grid.Column="2"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnSquareRoot"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="X2" />


        <Button
            Grid.Row="2"
            Grid.Column="0"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="7" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="8" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="9" />


        <Button
            Grid.Row="3"
            Grid.Column="0"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="4" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="5" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="6" />


        <Button
            Grid.Row="4"
            Grid.Column="0"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="1" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="2" />

        <Button
            Grid.Row="4"
            Grid.Column="2"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="3" />
        <Button
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            BackgroundColor="{AppThemeBinding Light=#e6e6e6, Dark=#2d2d2d}"
            TextColor="{AppThemeBinding Light=#333333, Dark=#f7f7f7}"
            Clicked="OnNumberSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="0" />


        <Button
            Grid.Row="1"
            Grid.Column="3"
            BackgroundColor="#512bd4"
            Clicked="onOperatorSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="/"
            TextColor="White" />
        <Button
            Grid.Row="2"
            Grid.Column="3"
            BackgroundColor="#512bd4"
            Clicked="onOperatorSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="*"
            TextColor="White" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            BackgroundColor="#512bd4"
            Clicked="onOperatorSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="-"
            TextColor="White" />
        <Button
            Grid.Row="4"
            Grid.Column="3"
            BackgroundColor="#512bd4"
            Clicked="onOperatorSelection"
            Released="Button_Released"
            Pressed="Button_Pressed"
            CornerRadius="0"
            FontSize="36"
            Text="+"
            TextColor="White" />
        <Button
            Grid.Row="5"
            Grid.Column="3"
            BackgroundColor="#512bd4"
            Released="Button_Released"
            Pressed="Button_Pressed"
            Clicked="onCalculate"
            CornerRadius="0"
            FontSize="36"
            Text="="
            TextColor="White" />
    </Grid>

</ContentPage>
